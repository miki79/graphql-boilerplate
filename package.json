{
  "name": "graphql-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for graphQL with JEST and Hot Reload webpack",
  "main": "src/index.js",
  "author": "Michele Giardi",
  "license": "MIT",
  "scripts": {
    "dev": "rm -rf ./dist && webpack --config webpack.config.js",
    "build:prod": "rm -rf ./dist && webpack --config webpack.prod.config.js",
    "start": "rm -rf ./dist && webpack --config webpack.prod.config.js && node dist/server.js",
    "test": "jest",
    "lint": "eslint src"
  },
  "dependencies": {
    "apollo-server-express": "^1.4.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql": "^0.10.3",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^2.13.0",
    "merge-graphql-schemas": "^1.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.11.0",
    "jest": "^24.8.0",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.35.3",
    "webpack-node-externals": "^1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Miki79/graphql-boilerplate.git"
  }
}
